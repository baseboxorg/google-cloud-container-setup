##
# Wordpress nginx settings for Dorel websites
# Author: Bob van Luijt
##

##
# Define a map for the Cache-Control in Google Cloud
##
map $request_uri $cc {
    ~^/wp-admin  "no-store";
    default      "public";
}

map $request_uri $ex {
    ~^/wp-admin  "0";
    default      "900s";
}

##
# Define server settings
##
server {
    listen               443;
    ssl                  on;
    ssl_certificate	     /etc/ssl/certs/local.crt;
    ssl_certificate_key  /etc/ssl/private/local.key;
    
    charset UTF-8;
    root /var/www/WordPress;
    
    index index.php index.html index.htm;
    server_name _;
    location / {
        try_files $uri/ /index.php?$args;
    }
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_index index.php;
        fastcgi_pass unix:/var/run/php/php7.1-fpm.sock;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        # set headers
        add_header Cache-Control $cc; # as defined in the map
        access_log off;
        expires $ex;
    }
    location ~* \.(js|css|svg|png|jpg|jpeg|gif|ico|eot|otf|ttf|woff|html|htm)$ {
        add_header Access-Control-Allow-Origin *;
        add_header Cache-Control "public";
        access_log off;
        log_not_found off;
        expires 1y;
    }
    location ~ /\.ht {
           deny all;
    }
}
